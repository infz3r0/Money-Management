@using Money_Management.Models
@model List<base_money>

@foreach (base_money bm in Model)
{
    <div class="form-group row">
        <label for="Q_@bm.bm_value" class="col-sm-2 col-form-label">@String.Format("{0:N0} VND", bm.bm_value)</label>
        <div class="col-sm-2">
            <input type="number" class="form-control quantity" name="Q_@bm.bm_value" id="Q_@bm.bm_value" value="0" min="0" required>
        </div>
    </div>
}


