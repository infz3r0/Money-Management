
@{
    Layout = null;
}
@model Money_Management.Models.account

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <title>Create new account</title>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h2 class="text-center">New account</h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-4">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "justify-content-center" }))
                {
                    <div class="form-group">
                        <input type="text" class="form-control" name="acc_username" placeholder="Username" maxlength="50" required>
                        <small id="emailHelp" class="form-text text-muted">Use this username to login. Max 50 character.</small>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="acc_password" placeholder="Password" required>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="re_password" placeholder="Retype password" required>
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="acc_email" placeholder="Email" required>
                        <small id="emailHelp" class="form-text text-muted">Use real email for verification later.</small>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-block">Create account</button>
                    </div>
                    <hr />
                    <p class="alert-danger" role="alert">
                        @ViewBag.Alert
                    </p>
                }
            </div>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    
</body>
</html>
